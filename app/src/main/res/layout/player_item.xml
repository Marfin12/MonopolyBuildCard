<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_enemy_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="24dp"
    >

    <View
        android:id="@+id/view_enemy_square"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:background="@drawable/spr_player_turn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Ooops! no todo list!" />

    <ImageView
        android:id="@+id/iv_enemy_info"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/spr_player_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Ooops! no todo list!" />

    <TextView
        android:id="@+id/tv_enemy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:paddingEnd="24dp"
        android:textSize="24dp"
        android:text="enemy Name 1"
        app:layout_constraintStart_toEndOf="@id/iv_enemy_info"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_enemy_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money: "
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/tv_enemy_name"
        app:layout_constraintTop_toBottomOf="@id/tv_enemy_name" />

    <TextView
        android:id="@+id/tv_enemy_asset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asset: "
        android:textSize="16dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tv_enemy_money"
        app:layout_constraintTop_toBottomOf="@id/tv_enemy_money" />


</androidx.constraintlayout.widget.ConstraintLayout>